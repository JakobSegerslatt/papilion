{
  "name": "papilion",
  "version": "1.0.5",
  "description": "Common utils i use",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "src/**/*",
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "tslint --project \"./tsconfig.json\"",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "cover": "nyc mocha --require ts-node/register --require source-map-support/register --full-trace --bail test/**/*.spec.ts",
    "cover-old": "istanbul cover node_modules/mocha/bin/_mocha test/*.spec.ts --reporter",
    "ci": "npm run lint && npm run build && npm run cover",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "coveralls2": "cat coverage/lcov.info | node_modules/coveralls/bin/coveralls.js",
    
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run ci",
    "preversion": "npm run ci",
    "docs": "typedoc --out docs src",
    "gh-pages": "rimraf docs && npm run docs && gh-pages -d docs"
  },
  "nyc": {
    "include": [
      "test/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true  
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JakobSegerslatt/papilion.git"
  },
  "keywords": [
    "utils"
  ],
  "author": "Jakob Segersl√§tt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JakobSegerslatt/papilion/issues"
  },
  "homepage": "https://github.com/JakobSegerslatt/papilion#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/istanbul": "^0.4.30",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.9.4",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "gh-pages": "^2.0.1",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^6.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.3.0",
    "source-map-support": "^0.5.10",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3"
  }
}
